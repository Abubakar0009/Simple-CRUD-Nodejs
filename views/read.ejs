<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class="main  min-h-screen w-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a  class="text-blue-600" href="/">Back to home</a>
        </div>
        <h1 class="text-xl font-semibold mb-4"> All Users </h1>
        <div class="users flex flex-wrap  gap-4 ">
           <% users.forEach(function(user){%>
            <div class="user w-72  p-3 bg-zinc-800 rounded-lg overflow-hidden">
                <div class="w-full h-52  rounded-lg bg-zinc-700"><img class="w-full h-full object-cover" src="<%=user.img%>" alt=""></div>
                <h3 class="mt-2 text-xl tracking-tighter  font-semibold"> <%=user.name%> </h3>
                <h2 class=" text-sm text-zinc-500"><%=user.email%></h2>
                <div class="flex  justify-between mt-10 ">
                  <a class="text-zinc-200" href="/edit/<%=user._id%>">Edit User</a>
                  <a class="text-red-500" href="/delete/<%=user._id%>">Delete User</a>
                    

                </div>
            </div>
         <%  }) %>
            
        </div>
    </div>
</body>
</html>